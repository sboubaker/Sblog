# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Home page

GET     /                                       	    Consultation.index
GET     /contact                                	    Consultation.contact

# Ignore favicon requests

GET     /favicon.ico                            	    404

# Map static resources from the /app/public folder to the /public path

GET     /public/                                	    staticDir:public

GET     /articles/{type}/{value}            		    Consultation.articles

GET     /article/{id}            			            Consultation.article

*	    /admin						                    module:secure
GET	    /admin/articles					                Administration.articles
GET	    /admin/comments/{postid}			            Administration.commentaires
GET	    /admin/comments/validc/{postid}/{commentnumber}	Administration.validerCommentaire
GET	    /admin/posts/validp/{postid}             	    Administration.validerPost
GET     /admin/posts/delete/{postid}                    Administration.supprimerPost
GET     /admin/newpost                                  Administration.nouveauArticle
POST    /admin/newpost                                  Administration.ajouterArticle

# Catch all
*       /{controller}/{action}                  	    {controller}.{action}
